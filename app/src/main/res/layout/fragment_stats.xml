<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#008577"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <RelativeLayout
            android:id="@+id/statLayout"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stat_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:text="Personal Stats"
                android:textColor="#fff"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stat_title"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:elevation="7dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:labelFor="@id/text_total_distance"
                        android:text="Total Distance Ran"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_total_distance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:labelFor="@id/text_avg_distance"
                        android:text="Avg Run Distance"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_avg_distance"
                        android:layout_width="fill_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:labelFor="@id/text_total_runs"
                        android:text="Total number of Runs"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_total_runs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:labelFor="@id/text_total_calories"
                        android:text="Total calories burned"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_total_calories"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:labelFor="@id/text_furthest_run"
                        android:text="Furthest Run"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_furthest_run"
                        android:layout_width="fill_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:labelFor="@id/text_shortest_run"
                        android:text="Shortest Run"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/text_shortest_run"
                        android:layout_width="fill_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@android:color/white"/>

                    <TextView
                        android:labelFor="@id/text_filter"
                        android:text="Show totals for"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/text_filter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btnPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Display" />


                    <!--  Unnecessary graph
                  <TextView
                      android:labelFor="@id/progression_filter"
                      android:text="Show your progression over time"
                      android:fontFamily="sans-serif-light"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

                  <Spinner
                      android:id="@+id/progression_filter"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content" />

                  <Button
                      android:id="@+id/btnLineChart"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Graph progress" />         -->

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>